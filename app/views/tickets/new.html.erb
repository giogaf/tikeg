<h1>Nuevo Ticket</h1>

<% if @ticket.errors.any? %>
	<% @ticket.errors.full_messages.each do |mensaje| %>
	<h4><%= mensaje %></h4>
	<% end %>
<% end %>

<%= form_for [@project,@ticket] do |f|%>
	<%= f.label :nombre %>
	<%= f.text_field :nombre %>
	<%= f.label :descripcion %>
	<%= f.text_field :descripcion %>	
	<%= f.submit "Crear ticket" %>
<% end %>